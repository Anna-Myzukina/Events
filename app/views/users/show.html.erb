<% provide(:title, @user.name) %>
<h1>Profile</h1>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
       
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <% if @user.attended_events.any? %>
	<h2>Upcoming Events</h2> 
	<ul class="media-list">
		<%= render @upcoming_events %>
	</ul>
<% else %>
	<h2>No Upcoming Events</h2>
<% end %>

<% if @events.past.any? %>
	<ul class="media-list">
		<%= render @events.past %>
	</ul>
<% end %>




<% if current_user != @user %>
	<%= link_to "Invite", invite_path(user_id: @user.id), class: "btn-primary btn-lg" %>
<% end %>

<hr>

<p>This is the account of <%= @user.email %>.</p>

<%= link_to "Edit Account", edit_user_path(@user) %>
<br>
<%= link_to "Delete Account", @user, method: :delete, data: { confirm: "Are you sure?" } %>

<hr>

<h2>Hosted Events</h2>


<hr>

<h2>Attending Events</h2>



<hr>

<h2>Attended Events</h2>


</div>